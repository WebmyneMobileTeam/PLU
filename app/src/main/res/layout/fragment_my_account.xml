<RelativeLayout
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    tools:context="com.webmyne.paylabas.userapp.home.MyAccountFragment">

   <RelativeLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

   <LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/back">


       <LinearLayout

           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <com.webmyne.paylabas.userapp.custom_components.SquareLayout
               android:id="@+id/linearMoneyTransfer"
               android:layout_margin="1dp"
               android:paddingTop="16dp"
               android:paddingBottom="16dp"
               android:gravity="center"
               android:background="@color/color_moneytransfer"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_weight="1" >

               <ImageView
                   android:id="@+id/imgMoneyTransfer"
                   android:contentDescription="Money Transfer"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/ic_moneytransfer"
                   android:scaleType="centerInside" />

               <TextView
                   android:gravity="center"
                   android:fontFamily="sans-serif-condensed"
                   android:id="@+id/txtMoneyTransfer"
                   android:text="MONEY TRANSFER"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="#fff"
                   android:textSize="18sp" />


           </com.webmyne.paylabas.userapp.custom_components.SquareLayout>

           <com.webmyne.paylabas.userapp.custom_components.SquareLayout
               android:id="@+id/linearMobileTopup"
               android:layout_margin="1dp"
               android:paddingTop="16dp"
               android:paddingBottom="16dp"
               android:gravity="center"
               android:background="@color/color_mobiletopup"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_weight="1" >

               <ImageView

                   android:id="@+id/imgMobileTopup"
                   android:contentDescription="@string/app_name"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/ic_mobiletopup"
                   android:scaleType="centerInside" />

               <TextView
                   android:fontFamily="sans-serif-condensed"
                   android:id="@+id/txtMobileTopup"
                   android:text="MOBILE TOPUP"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="#fff"
                   android:textSize="18sp"/>

           </com.webmyne.paylabas.userapp.custom_components.SquareLayout>
       </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.webmyne.paylabas.userapp.custom_components.HalfHeightLayout
            android:layout_margin="1dp"
            android:id="@+id/linearGiftCode"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:gravity="center"
            android:background="@color/color_giftcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
           >

            <ImageView
                android:id="@+id/imgGiftCode"
                android:contentDescription="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_giftcode"
                android:scaleType="centerInside" />

            <TextView
                android:fontFamily="sans-serif-condensed"
                android:id="@+id/txtGiftCode"
                android:text="GIFT CODE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="24sp" />


      </com.webmyne.paylabas.userapp.custom_components.HalfHeightLayout>

