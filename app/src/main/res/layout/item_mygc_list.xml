<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:orientation="horizontal"
    android:background="#EAEAEA"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:background="@drawable/circle"
        android:layout_gravity="center"
        android:text="@string/hello_world"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:textColor="#fff">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/imgItemGC"
            android:contentDescription="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_action_system_update_tv"
            android:scaleType="centerInside" />


    </FrameLayout>

    <FrameLayout
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:paddingLeft="@dimen/small_margin"
                android:paddingRight="@dimen/small_margin"
                android:paddingTop="@dimen/small_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView

                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/paylabas_dkgrey"
                    android:id="@+id/txtGcItemTitleName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    />
                <TextView

                    android:drawableLeft="@drawable/ic_giftcode_small"
                    android:drawablePadding="2dp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical|right"
                    android:fontFamily="sans-serif-condensed"
                    android:id="@+id/txtGcItemGCNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/small_text"
                    />




            </LinearLayout>

            <LinearLayout
                android:paddingLeft="@dimen/small_margin"
                android:paddingRight="@dimen/small_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:fontFamily="sans-serif-condensed"
                    android:id="@+id/txtGcItemMobile"
                    android:layout_width="0dp"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent"
                    android:text="Mobile"
                    android:layout_weight="1"
                    android:textSize="@dimen/small_text"
                    />





            </LinearLayout>

            <LinearLayout
                android:paddingLeft="@dimen/small_margin"
                android:paddingRight="@dimen/small_margin"
                android:layout_width="match_parent"
                android:layout_gravity="top"
                android:gravity="top"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="top"
                    android:fontFamily="sans-serif-condensed"

                    android:id="@+id/txtGcItemDate"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Date"
                    android:textSize="@dimen/ultra_small_text" />

                <ImageView

                    android:id="@+id/imgCombine"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/app_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_action_ic_combine"
                    android:scaleType="centerInside" />

                <TextView

                    android:fontFamily="sans-serif-condensed"

                    android:gravity="top"
                    android:id="@+id/txtGcItemAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:paddingLeft="@dimen/ultra_small_margin"
                    android:textColor="@color/green"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

            </LinearLayout>
        </LinearLayout>
   </FrameLayout>

</LinearLayout>
