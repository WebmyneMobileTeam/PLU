<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.webmyne.paylabas.userapp.money_transfer.PtoPHomeFragment">


    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/btnCheckpricePtoPHome"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="16dp"
        android:background="@color/paylabas_blue"
        android:text="Next"></com.gc.materialdesign.views.ButtonRectangle>

    <!-- Main linear -->
    <LinearLayout
        android:id="@+id/mainlinearPtoPHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btnCheckpricePtoPHome"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="Select Currency"
            android:textColor="#000"
            android:textSize="@dimen/normal_text" />

        <Spinner
            android:id="@+id/spinnerRecipientContactGenerateGc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:entries="@array/arr_currency"
            android:spinnerMode="dialog"></Spinner>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Amount"
            android:textColor="#000"
            android:textSize="@dimen/normal_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:fontFamily="sans-serif-condensed"
                android:gravity="right|center_vertical"
                android:paddingRight="8dp"
                android:text="@string/euro" />

            <EditText
                android:id="@+id/edAmountPtoP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:digits="0123456789.,"
                android:fontFamily="sans-serif-condensed"
                android:hint="amount"
                android:inputType="numberDecimal"
                android:textColor="#000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/paylabas_grey"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="Exchange Costs"
                android:textColor="#000"
                android:textSize="@dimen/normal_text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="right|center_vertical"
                    android:paddingRight="8dp"
                    android:text="@string/euro"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:digits="0123456789.,"
                    android:fontFamily="sans-serif-condensed"
                    android:inputType="numberDecimal"
                    android:text="for 0.00 to 150.00"
                    android:textColor="#000" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="right|center_vertical"
                    android:paddingRight="8dp"
                    android:text="@string/euro" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:digits="0123456789.,"
                    android:fontFamily="sans-serif-condensed"
                    android:inputType="numberDecimal"
                    android:text="for 150.01 to 1000.00"
                    android:textColor="#000" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif"
                android:text="@string/str_note_moneytrsnfer"
                android:textColor="@color/paylabas_blue"
                android:textSize="@dimen/small_text" />

        </LinearLayout>


    </LinearLayout>
</RelativeLayout>
