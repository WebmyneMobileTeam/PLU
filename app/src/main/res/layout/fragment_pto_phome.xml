<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.webmyne.paylabas.userapp.money_transfer.PtoPHomeFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/linearCheckpricePtoPHome"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:weightSum="2"
        android:layout_height="wrap_content">

    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/btnCheckpricePtoPHome"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="48dp"
        android:layout_marginRight="8dp"
        android:background="@color/paylabas_blue"
        android:text="Check Price"></com.gc.materialdesign.views.ButtonRectangle>
    </LinearLayout>
    <!-- Main linear -->
    <ScrollView
        android:layout_above="@id/linearCheckpricePtoPHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/mainlinearPtoPHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="Select Currency"
            android:textColor="#000"
            android:textSize="@dimen/normal_text" />

        <Spinner
            android:id="@+id/spinnerRecipientContactGenerateGc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:entries="@array/arr_currency"
            android:spinnerMode="dialog"></Spinner>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Amount"
            android:textColor="#000"
            android:textSize="@dimen/normal_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:fontFamily="sans-serif-condensed"
                android:gravity="right|center_vertical"
                android:paddingRight="8dp"
                android:text="@string/euro" />

            <EditText
                android:id="@+id/edAmountPtoP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:digits="0123456789.,"
                android:fontFamily="sans-serif-condensed"
                android:hint="amount"
                android:inputType="numberDecimal"
                android:textColor="#000" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/paylabas_blue"
            android:orientation="vertical"
            android:padding="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:digits="0123456789.,"
                    android:fontFamily="sans-serif-condensed"
                    android:inputType="numberDecimal"
                    android:text="Exchange Costs: "
                    android:textStyle="bold"
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/txtExchangeCost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:digits="0123456789.,"
                    android:fontFamily="sans-serif-condensed"
                    android:inputType="numberDecimal"
                    android:text=""
                    android:textStyle="bold"
                    android:textColor="#fff" />
            </LinearLayout>

            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/paylabas_blue"
            android:orientation="vertical"
            android:padding="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textStyle="bold"
                    android:digits="0123456789.,"
                    android:fontFamily="sans-serif-condensed"
                    android:inputType="numberDecimal"
                    android:text="Amount to be Withdrawn: "
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/txtWithdrawAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:digits="0123456789.,"
                    android:fontFamily="sans-serif-condensed"
                    android:inputType="numberDecimal"
                    android:text=""
                    android:textStyle="bold"
                    android:textColor="#fff" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/paylabas_blue"
            android:orientation="vertical"
            android:padding="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textStyle="bold"
                    android:digits="0123456789.,"
                    android:fontFamily="sans-serif-condensed"
                    android:inputType="numberDecimal"
                    android:text="Payable: "
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/txtPayable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:digits="0123456789.,"
                    android:fontFamily="sans-serif-condensed"
                    android:inputType="numberDecimal"
                    android:text=""
                    android:textStyle="bold"
                    android:textColor="#fff" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/paylabas_grey"
            android:orientation="vertical"
            android:padding="8dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtExchangeRate"

                    android:digits="0123456789.,"
                    android:fontFamily="sans-serif-condensed"
                    android:inputType="numberDecimal"

                    android:textSize="@dimen/small_text"
                    android:textColor="@color/paylabas_blue" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">


                <TextView
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="@dimen/activity_margin"
                    android:digits="0123456789.,"
                    android:fontFamily="sans-serif-condensed"
                    android:inputType="numberDecimal"
                    android:textSize="@dimen/small_text"
                    android:text="â‚¬ 8.99 for 150.01 to 1000.00"
                    android:textColor="#000" />

            </LinearLayout>

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif"
                android:text="@string/str_note_moneytrsnfer"
                android:textColor="@color/paylabas_blue"
                android:textSize="@dimen/small_text" />

        </LinearLayout>


    </LinearLayout>
    </ScrollView>
</RelativeLayout>
