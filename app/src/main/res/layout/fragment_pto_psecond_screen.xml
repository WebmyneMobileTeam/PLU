<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.webmyne.paylabas.userapp.money_transfer.PtoPSecondScreen">
    <!--Bottom Linear-->

    <LinearLayout
        android:id="@+id/bottomLinearGenerateGC"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/btnBackPtoPSecondScreen"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Back"
            android:background="@color/paylabas_grey"
            android:layout_weight="1" />

        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/btnNextPtoPSecondScreen"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Next"
            android:background="@color/paylabas_blue"
            android:layout_weight="1" />

    </LinearLayout>

    <ScrollView
        android:layout_above="@id/bottomLinearGenerateGC"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <!-- Main linear -->
    <LinearLayout
        android:id="@+id/mainlineargenerategc"
        android:padding="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:fontFamily="sans-serif-condensed"
            android:text="Receipient Contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="@dimen/normal_text" />

        <Spinner
            android:spinnerMode="dialog"
            android:id="@+id/spinnerRecipientContactGenerateGc"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ></Spinner>



        <TextView
            android:fontFamily="sans-serif-condensed"
            android:layout_marginTop="8dp"
            android:text="Country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="@dimen/normal_text" />

        <Spinner
            android:spinnerMode="dialog"
            android:id="@+id/spinnerCountryGenerateGc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"></Spinner>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:fontFamily="sans-serif-condensed"
                android:layout_marginTop="8dp"
                android:text="State"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="@dimen/normal_text" />


            <TextView
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginTop="8dp"
                android:text="City"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="@dimen/normal_text" />


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:spinnerMode="dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="One"
                android:id="@+id/Country"
                android:layout_weight="1" />

            <Spinner
                android:spinnerMode="dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="One"
                android:id="@+id/State"
                android:layout_weight="1" />

        </LinearLayout>


        <TextView
            android:fontFamily="sans-serif-condensed"
            android:layout_marginTop="8dp"
            android:text="Mobile Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="@dimen/normal_text" />

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Spinner
                android:spinnerMode="dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spCode"
                android:layout_weight="4" />

            <EditText

                android:inputType="phone"
                android:hint="mobile"
                android:fontFamily="sans-serif-condensed"
                android:id="@+id/edMobileNumberGenerateGC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:layout_weight="1" />

        </LinearLayout>


        <TextView
            android:fontFamily="sans-serif-condensed"
            android:layout_marginTop="8dp"
            android:text="Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="@dimen/normal_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:visibility="invisible"
                android:fontFamily="sans-serif-condensed"
                android:paddingRight="8dp"
                android:gravity="right|center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/euro"
                android:layout_weight="4" />

            <EditText
                android:hint="email"
                android:fontFamily="sans-serif-condensed"
                android:id="@+id/edAmountGenerateGC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:inputType="numberDecimal"
                android:layout_weight="1"
                android:digits="0123456789.,"/>

        </LinearLayout>

    </LinearLayout>

    </ScrollView>

</RelativeLayout>
