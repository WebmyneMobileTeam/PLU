<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/paylabas_grey"
    android:orientation="vertical"
    tools:context="com.webmyne.paylabas.userapp.giftcode.GiftCodeHomeFragment">


    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.gc.materialdesign.views.ButtonRectangle
            android:fontFamily="sans-serif-condensed"
            android:id="@+id/btnGCHomeMyGc"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="My GC"
            android:background="@color/paylabas_dkgrey"
            android:layout_weight="1" />

        <com.gc.materialdesign.views.ButtonRectangle
            android:fontFamily="sans-serif-condensed"
            android:id="@+id/btnGCHomeSentGc"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Sent GC"
            android:background="@color/paylabas_grey"
            android:layout_weight="1"/>
    </LinearLayout>


    <in.srain.cube.views.ptr.PtrFrameLayout
        android:id="@+id/material_style_ptr_frame"
        xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        cube_ptr:ptr_duration_to_close="300"
        cube_ptr:ptr_duration_to_close_header="2000"
        cube_ptr:ptr_keep_header_when_refresh="true"
        cube_ptr:ptr_pull_to_fresh="false"
        cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
        cube_ptr:ptr_resistance="1.7">

        <ListView
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:id="@+id/listGC"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="1dp" />

        </in.srain.cube.views.ptr.PtrFrameLayout>



</LinearLayout>
