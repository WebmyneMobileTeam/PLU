<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:orientation="horizontal"
    android:background="#fff"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:layout_gravity="center"
        android:text="@string/hello_world"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:textColor="#fff">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/imgMobileTopupicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_recharge_done"
            android:scaleType="centerInside" />


    </FrameLayout>

    <FrameLayout
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:paddingLeft="@dimen/small_margin"
                android:paddingRight="@dimen/small_margin"
                android:paddingTop="@dimen/small_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView

                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/paylabas_dkgrey"
                    android:id="@+id/txt_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    />

              <!--  <ImageView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_phone"
                    android:scaleType="centerInside" />-->
                <TextView
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/paylabas_dkgrey"
                    android:id="@+id/txt_Amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:textSize="15sp"
                    />
                    </LinearLayout>
            <TextView
                android:paddingLeft="8dp"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/paylabas_dkgrey"
                android:id="@+id/txt_Mobileno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transcation ID: 5142015"
                android:textSize="15sp"
                />
            <TextView
                android:paddingLeft="8dp"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/paylabas_dkgrey"
                android:id="@+id/txt_TranscationID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile No: 8905078538"
                android:textSize="15sp"
                />
        <LinearLayout
            android:paddingLeft="@dimen/small_margin"
            android:paddingRight="@dimen/small_margin"
            android:paddingTop="@dimen/small_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

                <TextView
                    android:paddingLeft="8dp"
                    android:paddingRight="@dimen/small_margin"

                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/paylabas_dkgrey"
                    android:id="@+id/txt_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    />
            <TextView
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/paylabas_dkgrey"
                android:id="@+id/txt_Status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: Done"
                android:textSize="15sp"
                />
</LinearLayout>


        </LinearLayout>
   </FrameLayout>

</LinearLayout>
