<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#fff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.webmyne.paylabas.userapp.registration.LoginActivity">

    <!--Login Layout -->

    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/loginLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:padding="@dimen/activity_horizontal_margin"
            android:background="@drawable/ed_rounded"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Spinner android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner_country"
                    android:spinnerMode="dialog"
                    android:layout_gravity="center"
                    />


                <TextView android:layout_width="match_parent"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="Your country code and phone number"/>

                <!--  Horizontal Layout -->

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <EditText android:layout_width="match_parent"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:id="@+id/edCodeCountry"
                        android:focusable="false"
                        android:textColor="#000"
                        android:focusableInTouchMode="false"
                        android:background="@android:color/transparent"
                        android:text="+91"/>

                    <EditText android:layout_width="match_parent"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@android:color/black"
                        android:inputType="number"
                        android:maxLength="10"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:id="@+id/edEnterMobileNo"
                        android:gravity="left|center_vertical"
                        android:hint="mobile"/>


                </LinearLayout>


                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <!--fake ed-->
                    <EditText android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:visibility="invisible"
                        android:focusable="false"
                        android:textColor="#000"
                        android:focusableInTouchMode="false"
                        android:background="@android:color/transparent"
                        android:text="+91"/>

                    <EditText android:layout_width="match_parent"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="numberPassword"
                        android:textColor="@android:color/black"
                        android:id="@+id/edPassword"
                        android:gravity="left|center_vertical"
                        android:hint="password"/>


                </LinearLayout>

                <com.gc.materialdesign.views.ButtonRectangle
                    android:fontFamily="sans-serif-condensed"
                    android:id="@+id/btnConfirmSignIn"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text = "SIGN IN"
                    android:layout_gravity="right"
                    android:background="@color/paylabas_green"
                    >
                </com.gc.materialdesign.views.ButtonRectangle>

                <com.gc.materialdesign.views.ButtonFlat
                    android:id="@+id/btnRegisterFromLogin"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:text="register">

                    </com.gc.materialdesign.views.ButtonFlat>

            </LinearLayout>
        </FrameLayout>
    </RelativeLayout>
    <!--Login view completed here-->
</RelativeLayout>
