<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#EAEAEA"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.webmyne.paylabas.userapp.registration.LoginActivity">

    <!--Color shades
#ADACAC - color 1
#F0F0F5 - color 2
#D0CFCF - color 3
#E6E4E4 - color 4
#EAEAEA - color 5 paylabas
#d2d2d2 - color 6 paylabas dark
     -->



    <!--Login Layout -->

    <!--Login Layout -->
    <LinearLayout
        android:id="@+id/paylabaslogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:background="@drawable/hl"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="@dimen/activity_margin"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgUS"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_united_states"/>
            <ImageView
                android:id="@+id/imgFrance"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_france"/>
        </LinearLayout>

    </LinearLayout>


            <ScrollView
                android:layout_below="@id/paylabaslogo"
                android:fillViewport="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <TextView
                    android:id="@+id/txtseleccountry"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Select Country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#494949"
                    android:textSize="22sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/paylabas_dkgrey"></View>

                <Spinner android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/spinner_country"
                    android:spinnerMode="dialog"
                    android:layout_gravity="center"
                    />


                <TextView android:layout_width="match_parent"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="@string/xml_YOUCOUNTRYCODEANDPHONE"/>

                <!--  Horizontal Layout -->

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <EditText android:layout_width="match_parent"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="left"
                        android:id="@+id/edCodeCountry"
                        android:focusable="false"
                        android:textColor="#000"
                        android:focusableInTouchMode="false"
                        android:background="@android:color/transparent"
                        android:text="+91"/>

                    <EditText android:layout_width="match_parent"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@android:color/black"
                        android:inputType="number"
                        android:maxLength="10"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:id="@+id/edEnterMobileNo"
                        android:gravity="left|center_vertical"
                        android:hint="Enter you mobile no."/>


                </LinearLayout>


                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <!--fake ed-->
                    <EditText android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:visibility="invisible"
                        android:focusable="false"
                        android:textColor="#000"
                        android:focusableInTouchMode="false"
                        android:background="@android:color/transparent"
                        android:text="+91"/>
                    <EditText android:layout_width="match_parent"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_height="wrap_content"
                        android:inputType="numberPassword"
                        android:maxLength="6"
                        android:textColor="@android:color/black"
                        android:id="@+id/edPassword"
                        android:gravity="left|center_vertical"
                        android:hint="Enter your pin"/>


                </LinearLayout>

                <com.gc.materialdesign.views.ButtonRectangle
                    android:fontFamily="sans-serif-condensed"
                    android:id="@+id/btnConfirmSignIn"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text = "SIGN IN"
                    android:background="@color/paylabas_blue"
                    >
                </com.gc.materialdesign.views.ButtonRectangle>

                <com.gc.materialdesign.views.ButtonFlat
                    android:id="@+id/btnRegisterFromLogin"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="Register">

                    </com.gc.materialdesign.views.ButtonFlat>

                <com.gc.materialdesign.views.ButtonFlat
                    android:id="@+id/btnForgotPin"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Forgot Pin?">

                </com.gc.materialdesign.views.ButtonFlat>

            </LinearLayout>
            </ScrollView>

    <!--Login view completed here-->
</RelativeLayout>
